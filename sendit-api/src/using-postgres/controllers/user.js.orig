  async getOne(req, res) {
    const text = 'SELECT * FROM parcels WHERE id = $1 AND user_id = $2';
    try {
      const { rows } = await dbModel.query(text, [req.params.id, req.user.id]);
      if (!rows[0]) {
        return res.status(404).send('Parcel was not found');
      }
